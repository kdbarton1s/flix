<%= form_for(@movie) do |f| %>
  <%= render "errors", object: @movie %>
  <p>
    <%= f.label :title %> <br>
    <%= f.text_field :title, autofocus: true %>
  </p>
  <p>
    <%= f.label :description %> <br>
    <%= f.text_area :description, cols: 40, rows: 7 %>
  </p>
  <p>
    <%= f.label :rating %><br>
    <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>
  </p>
  <p>
    <%= f.label :released_on %><br>
    <%= f.date_field :released_on %>
  </p>
  <p>
    <%= f.label :gross_earnings %><br>
    <%= f.number_field :gross_earnings %>
  </p>
  <p>
    <%= f.label :cast %><br>
    <%= f.text_field :cast %>
  </p>
  <p>
    <%= f.label :director %><br>
    <%= f.text_field :director %>
  </p>
  <p>
    <%= f.label :duration %><br>
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <%= image_for(@movie) %>
  </p>
  <p><%= f.submit %> | <%= link_to("Cancel", movies_path) %></p>

<% end %>
