<h2 id="home-page-h2"><%= pluralize(@movies.size, "Movie") %></h2>
<div class="container-fluid">
  <% @movies.each do |movie| %>
    <div class="row">
      <div class="col-md-4">
        <h3><%= link_to(movie.title, movie) %></h3>
        <%= image_for(movie) %>
      </div>
      <div class="col-md-8">
        <p><%= truncate(movie.description, length: 100, separator: ' ') %></p>
        <table>
          <tr>
            <th>Released:</th>
            <td><%= movie.released_on %> (<%=time_ago_in_words(movie.released_on) %> ago)</td>
          </tr>
          <tr>
            <th>Rating:</th>
            <td><%= movie.rating %></td>
          </tr>
          <tr>
            <th>Total Gross:</th>
            <td> <%= format_total_gross(movie) %></td>
          </tr>
          <tr>
            <th>Duration:</th>
            <td><%=  movie.duration %></td>
          </tr>
        </table>
      </div>
    </div>

  <% end %>
</div>
